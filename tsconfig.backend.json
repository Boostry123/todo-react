{
    "compilerOptions": {
      "target": "ES6",
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "src/backend/**/*"
    ]
  }
  